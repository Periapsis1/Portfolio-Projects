<!doctype html>
<html>
    <head>
        <title>OSMC Database Interface{% if subpage_name %} - {{subpage_name}}{% endif %}</title>
        <!-- roboto font -->
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
        <!-- style -->
        <link rel="stylesheet" href="{{url_for('static', filename='css/style.css')}}">
        {% block other_imports %}{% endblock %}
    </head>
    <body>
        <!-- Top bar. Should just have the website name for now -->
        <div class="nav-bar">
            <h1 class="site-name"><a href="/">OSMC</a></h1>
            <div class="navbar-url-list">
                {% for site in tables %}
                    <div class="site-url">
                        <a href="/tables/{{ camel_to_snake(site) }}">{{ site }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="content">
            {% block content %}{% endblock %}
        </div>
    </body>
</html>